{
  "name": "nexpress",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --names \"server,client\" --prefix-colors \"magenta,cyan\" --prefix \"[{time}] [{name}]\" \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "format": "prettier --write \"client/**/*.{js,ts,tsx,json,css,md}\" \"server/**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"client/**/*.{js,ts,tsx,json,css,md}\" \"server/**/*.{js,ts,json,md}\"",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markmuthii/nexpress.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/markmuthii/nexpress/issues"
  },
  "homepage": "https://github.com/markmuthii/nexpress#readme",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "3.5.3"
  },
  "lint-staged": {
    "client/**/*.{js,ts,tsx,json,css,md}": [
      "prettier --write"
    ],
    "server/**/*.{js,ts,json,md}": [
      "prettier --write"
    ]
  },
  "private": true,
  "workspaces": [
    "client",
    "server"
  ]
}
